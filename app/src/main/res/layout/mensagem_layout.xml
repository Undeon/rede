<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/idLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
    />

    <TextView
        android:id="@+id/idTextoTitulo"
        android:layout_below="@id/idLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="@string/mensagemCadastroPassosTitulo"
        android:textSize="20sp"
        android:padding="8dp"
        android:textStyle="bold"
    />

    <TextView
        android:id="@+id/idTexto"
        android:layout_below="@id/idTextoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensagemCadastroPassos"
        android:textSize="20sp"
        android:padding="8dp"
    />

</RelativeLayout>